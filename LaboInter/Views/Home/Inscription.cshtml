@model Clients

<head>
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>
    <script src="/_framework/aspnetcore-browser-refresh.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/4.0.0/jquery.validate.unobtrusive.min.js"></script>

    <div class="main">
        <h1>Inscription</h1>
    </div>
    <div class="main">
        <form action="Inscription" method="post">

            <div class="main">
                <label asp-for="Nom" style="font-size : 22px;"></label>
                <input asp-for="Nom" />
            </div>

            <div class="main">
                <span asp-validation-for="Nom" class="text-danger"></span>
            </div>

            <div class="main">
                <label asp-for="Prenom" style="font-size : 22px;"></label>
                <input asp-for="Prenom" />
            </div>

            <div class="main">
                <span asp-validation-for="Prenom" class="text-danger"></span>
            </div>

            <div class="main">
                <label asp-for="Adresse" style="font-size : 22px;"></label>
                <input asp-for="Adresse" />
            </div>

            <div class="main">
                <span asp-validation-for="Adresse" class="text-danger"></span>
            </div>

            <div class="main">
                <label asp-for="Email" style="font-size : 22px;"></label>
                <input asp-for="Email" />
            </div>

            <div class="main">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="main">
                <label asp-for="Password" style="font-size : 22px;"></label>
                <input asp-for="Password" type="password"/>
            </div>

            <div class="main">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            @if(ViewBag.Error is not null) {
                <div class="main">
                    <p>@ViewBag.Error</p>
                </div>
            }

            <div class="main">
                <a href="@Url.Action("Index", "Home")" class="btn btn-primary">Retour</a>
                <button type="submit" class="btn btn-primary">S'inscrire</button>
            </div>
        </form>
    </div>
</body>